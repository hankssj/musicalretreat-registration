<tr>
  <%= render :partial => "reg_index_button", :locals => {:text => "View Registration", :action => :show} %>
  <%= render :partial => "reg_index_button", :locals => {:text => "Edit Registration", :action => :edit} %>
</tr>
<tr>
  <% if @has_balance %>
     <%= render :partial => "reg_index_button", :locals => {:text => "Pay Online", :action => :payment} %>
  <% else %>
     <%= render :partial => "reg_index_button_filler", :locals => {:text => "You Are Fully Paid"} %>
  <% end %>
  <% if @needs_evals %>
     <%= render :partial => "reg_index_button", 
     :locals => {:text => "Self Evaluation / Ensembles / Elective Choices", 
                 :action => {:controller => :ensembles, :action => :new, :method => :get}} %>
  <% else %>
     <%= render :partial => "reg_index_button_filler", :locals => {:text => "You Have Chosen Ensembles"} %>
  <% end %>
</tr>
<tr>
  <%= render :partial => "reg_index_button", :locals => {:text => "Change Password", :action => :change_password} %>
  <%= render :partial => "reg_index_button", :locals => {:text => "Log Out", :action => :logout} %>
</tr>

<div id="login-container">
  <fieldset>
    <legend>Please Log In</legend>

    <%= form_tag(:controller => :login, :action => :login) do %>
      <table>
      	<tr><td class="form-label"><label for="name">Email:</label></td>
      		<td><%= text_field_tag :email, params[:email] %></td>
      	</tr>
      	<tr><td class="form-label"><label for="password">Password:</label></td>
            <td><%= password_field_tag :password, params[:password] %></td>
        </tr>
        <tr><td /><td><%= submit_tag "Login" %></td>
        </tr>
       </table>
    <% end %>
  </fieldset>
</div>

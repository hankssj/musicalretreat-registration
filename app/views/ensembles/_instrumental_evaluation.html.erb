<% @instrument = instrumental_evaluation.object.instrument %>
<h2>Evaluation for <%= @instrument.display_name %></h2>

<% if @instrument.string? %>
<% render :partial => "string_evaluation", :locals => {:instrument => @instrument} %>
<% elsif @instrument.brass? %>
<% render :partial => "brass_evaluation", :locals => {:instrument => @instrument} %>
<% elseif @instrument.woodwind? %>
<% render :partial => "woodwind_evaluation", :locals => {:instrument => @instrument} %>
<% else %>
<% render :partial => "percussion_evaluation", :locals => {:instrument => @instrument} %>
<% end %>
<hr>


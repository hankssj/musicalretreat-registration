  </table>
  <% end %>

  <% if instrument.trombone? %>
  <table class='eval-table'>
    <tr><th colspan="2">What  instruments are you bringing to camp?</th></tr>
  <tr><td>Tenor Trombone</td><td>Bass Trombone</td>
  </tr>
  <tr>
  <td><%= form.check_box :other_instrument_trombone %></td>
  <td><%= form.check_box :other_instrument_bass_trombone %></td>
  </tr>
  </table>
  <% end %>

  <% if instrument.oboe? %>
  <table class='eval-table'>
    <tr><th colspan="7">What  instruments are you bringing to camp?</th></tr>
  <tr>
    <td>Oboe</td>
    <td>English Horn</td>
    <td>Oboe D'Amore</td>
    <td>Bass Oboe</td>
    <td>Taille</td>
    <td>Piffaro</td>
